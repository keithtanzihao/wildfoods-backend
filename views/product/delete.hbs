{{#extends "base"}}

  {{#block "content"}}
    <section class="baseCreate">

      <div>
        <h1>Delete Product</h1>
      </div>

      <form method="POST">
        <h1>Are you sure you want to delete {{product.title}}</h1>
        <div>
          <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
          <a class="button__index--delete" href="/admin/product">Cancel</a>
          <input type="submit" value="Submit" class="button__index--edit" />
        </div>
      </form>

    </section>
  {{/block}}

{{/extends}}
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="/scss/main.css" />
    <title>Wildfoods Admin Page</title>
  </head>
  <body>

    {{> navbar }}
    <div> 
      {{> sidebar }}
      <div class="base">
        
        {{#if success}}
          {{#each success}}
            <div class="base__flash--success">
              <p>{{this.message}}</p>
            </div>
          {{/each}}
        {{/if}}

        {{#if error}}
          {{#each error}}
            <div class="base__flash--error">
              <p>{{this.message}}</p>
            </div>
          {{/each}} 
        {{/if}}

        {{#block "content"}}{{/block}}
      </div>
    </div>

    {{#block 'js'}}{{/block}}    
    
  </body>

</html>
{{#extends "base"}}

  {{#block "content"}}
    <section class="baseIndex">

      <div>
        <h1>Content Index</h1>
        <a class="button__index--create" href="content/create">Create</a>
      </div>

      <table class="baseIndex__table">

        <thead>
          <tr>
            <th>id</th>
            <th>title</th>
            <th>description</th>
            <th>product_id</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          {{#each content}}
            <tr>
              <td>
                {{this.id}}
              </td>
              <td>
                {{this.title}}
              </td>
              <td>
                {{this.description}}
              </td>
              <td>
                {{this.product_id}}
              </td>
              <td>
                <a
                  class="button__index--edit"
                  href="/admin/content/{{this.id}}/edit"
                >Edit</a>
                <a
                  class="button__index--delete"
                  href="/admin/content/{{this.id}}/delete"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </section>
  {{/block}}

{{/extends}}